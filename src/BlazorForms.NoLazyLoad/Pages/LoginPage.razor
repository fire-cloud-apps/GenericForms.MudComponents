
@page "/authentication/login"

<MudBreadcrumbs Items="_items"></MudBreadcrumbs>

@code {
    private List<BreadcrumbItem> _items = new List<BreadcrumbItem>
    {
        new BreadcrumbItem("Authentication", href: "/",
            icon: Icons.Material.Outlined.Security),

        new BreadcrumbItem("Login Form",
            icon:Icons.Material.Outlined.Login, disabled:false,
            href:  "/authentication/login"),
    };
}


<Blazor.UI.LoginForms.Login LoginInfo="@_loginInfo"
                            LogoAlign="AlignItems.End"                            
                            TextGradient="gradient-text"
                            ForgetPasswordLink="#"
                            Auth="@_authDetails"
                            OnClick="EventInvoke">


</Blazor.UI.LoginForms.Login>


@code{
    Blazor.UI.LoginForms.Model.AuthDetails _authDetails;
    Blazor.UI.LoginForms.LoginUI _loginInfo = new LoginUI()
    {
            SignUpLink = "/register",
            LoginIcon = @Icons.Material.Rounded.Login
    };

    public void EventInvoke(Blazor.UI.LoginForms.Model.AuthDetails auth)
    {
        Console.WriteLine($"Parent Event Invoked: Email: {auth.Email} Password: {auth.Password}");
    }
    protected override async Task OnInitializedAsync()
    {
        _authDetails = new Blazor.UI.LoginForms.Model.AuthDetails();
    }
}