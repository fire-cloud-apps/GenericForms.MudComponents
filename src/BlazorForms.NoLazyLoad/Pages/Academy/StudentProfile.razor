@page "/Form/Academy/StudentProfile"
@inject HttpClient Http


<MudTabs Class="ma-4" Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6">
    <MudTabPanel Text="Student Info">
        @if (_formStudentBuilders is not null)
        {
            <DynamicMudForm FormBuilders="_formStudentBuilders"/>
        }
    </MudTabPanel>
    <MudTabPanel Text="Guardian Details">
        @if (_formGuardianBuilders is not null)
        {
            <DynamicMudForm FormBuilders="_formGuardianBuilders"/>
        }
    </MudTabPanel>
    <MudTabPanel Text="Student Course History">
        @if (_formCourseHistoryBuilders is not null)
        {
        <DynamicMudForm FormBuilders="@_formCourseHistoryBuilders"/>
        }
        
    </MudTabPanel>
    <MudTabPanel Text="Documents" Disabled="false">
        @if (_formAttachmentsBuilders is not null)
        {
            <DynamicMudForm GlobalBuilderSettings="@_globalBuilderSettings" 
                            FormBuilders="@_formAttachmentsBuilders"/>
        }
    </MudTabPanel>
</MudTabs>


